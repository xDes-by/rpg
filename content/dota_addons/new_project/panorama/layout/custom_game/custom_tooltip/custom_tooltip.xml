<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/layout/custom_game/custom_tooltip/custom_tooltip.css" />
	</styles>
	<scripts>
		<include src="s2r://panorama/layout/custom_game/custom_tooltip/custom_tooltip.js" />
	</scripts>
	<Panel class="CHCItemTooltipRoot" hittest="false" hittestchildren="false" ontooltiploaded="setTooltip()">
		<Label id="TooltipName" html="true" />
		<Panel id="MainInfo">
			<Label id="RarityText" html="true" />
			<Label id="CategoryText" html="true" />
		</Panel>
		<Label class="TooltipSeparator" />
		<Panel id="SourceValueWrap">
			<Label id="SourceValueLine" />
			<Label id="SourceValue" html="true" />
		</Panel>
		<Panel id="SourceBorder">
			<Panel id="SourceOverlay" />
			<Image id="SourceImage" src="s2r://" />
		</Panel>
		<Label id="SourceName" html="true" />
		<Label class="TooltipSeparator" />
		<Label id="Description" />
	</Panel>
</root>
