<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/layout/custom_game/custom_tooltip/custom_tooltip.css" />
	</styles>
	<scripts>
		<include src="s2r://panorama/layout/custom_game/custom_tooltip/custom_tooltip.js" />
	</scripts>
	
	<Panel id="CustomTooltipRoot" class="CustomTooltipRoot" hittest="false" hittestchildren="false" ontooltiploaded="setTooltip()">
		<Panel id="MainInfo">
			<Label id="TooltipName" html="true" />
			<Image class='TooltipImage' id='TooltipImage' src="" />
		</Panel>
		<Panel id="BaseAttributes">
			<Label id="armor" class="ba_class" text="1"/>
			<Label id="quality" class="ba_class" text="1"/>
			<Label id="required_str" class="ba_class" text="1"/>
			<Label id="required_agi" class="ba_class" text="1"/>
			<Label id="can_use" class="ba_class" text="1"/>
		</Panel>
		<Label id="Luck" text="#Luck" html="true"/>
		<Label id="Additional" ext="#Luck" html="true"/>
		<Panel id="ExcellentBonus"/>
	</Panel>
</root>
