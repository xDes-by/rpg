<root>
	<styles>
		<include src="s2r://panorama/layout/custom_game/pick_menu/pick_menu.css" />
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
	</styles>
	<scripts>
		<include src="s2r://panorama/layout/custom_game/pick_menu/pick_menu.js" />
	</scripts>
	
	<snippets>
		<snippet name="hero_cart">
			<Panel id="hero_cart_content">
				<DOTAHeroImage id="hero_cart_img" class="hero_cart_img" heroname="" heroimagestyle="portrait"/>
				<Panel id="hero_cart_img_back" class="hero_cart_img_back" hittest="false"/>
			</Panel>
		</snippet>
	</snippets>
	

	<Panel class="root" hittest="false">
		<Panel id="PickContainer">
			<Panel id="ImagePanel" class="image"/>
			<Panel id="PickHerosMenu">
				<Panel id="PickHerosMenuBack"/>
			</Panel>
			<Panel id="PickHeroScene" hittest="false"/>
			
			<Panel id="PickButton">
				<Label id="PickButtonLabel" text="#pick"/>
			</Panel>
			
			<Panel id="PickHeroBaseDesc" hittest="false">
				<Label id="HeroName" text="Lich" />
				
				<Panel id="HeroLevelContainer">
					<Label id="HeroLevelLabel" text="Level: 347 (5)"/>
					<Panel id="HeroLevelBar"/>
				</Panel>
				
				<Panel id="HeroStatsSummaryContainer">
					<Panel class="HeroStatsLeftCol">
					
						<Panel class="AttributeContainer">
							<Panel class="LeftRightFlow">
								<Panel class="HeroStatsIconStr" />
								<Label id="HeroStatsIconStrLabel" class="stats_label" text="50" html="true"/>
							</Panel>
						</Panel>
						
						<Panel class="AttributeContainer">
							<Panel class="LeftRightFlow">
								<Panel class="HeroStatsIconAgi" />
								<Label id="HeroStatsIconAgiLabel" class="stats_label" text="20" html="true"/>
							</Panel>
						</Panel>
						
						<Panel class="AttributeContainer">
							<Panel class="LeftRightFlow">
								<Panel class="HeroStatsIconVit" />
								<Label id="HeroStatsIconVitLabel" class="stats_label" text="20" html="true"/>
							</Panel>
						</Panel>
						
						<Panel class="AttributeContainer">
							<Panel class="LeftRightFlow">
								<Panel class="HeroStatsIconEng" />
								<Label id="HeroStatsIconEngLabel" class="stats_label" text="20" html="true"/>
							</Panel>
						</Panel>
					</Panel>

					<Panel class="HeroStatsRightCol" hittest="false">

						<Panel id="DamageMin" class="StatPanels">
							<Label id="DamageLabel" class="StatPanelsLabel" text="65" />
							<Panel id="DamageIcon" class="StatIcon" />
						</Panel>
						
						<Panel id="AttackSpeed" class="StatPanels">
							<Label id="AttackSpeedLabel" class="StatPanelsLabel" text="65" />
							<Panel id="AttackSpeedIcon" class="StatIcon" />
						</Panel>
						
						<Panel id="Armor" class="StatPanels">
							<Label id="ArmorLabel" class="StatPanelsLabel" text="65" />
							<Panel id="ArmorIcon" class="StatIcon" />
						</Panel>
						
						<Panel id="MoveSpeed" class="StatPanels">
							<Label id="MoveSpeedLabel" class="StatPanelsLabel" text="65" />
							<Panel id="MoveSpeedIcon" class="StatIcon" />
						</Panel>

						<Panel id="Bars" class="StatPanels">
							<ProgressBar id="HeroHpBar"/>
							<ProgressBar id="HeroMpBar"/>
						</Panel>
						
					</Panel>
					
				</Panel>
			</Panel>

			<Panel id="PickHeroLore" hittest="false">
				<Panel id="player_stats_description">
					<Label id="LoreHeroName" html="true" text="Juggernaut"/>
					<Label id="LoreHeroClass" html="true" text="warrior"/>
				</Panel>

			</Panel>
		</Panel>
	</Panel>
</root>
